<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/question_type_1">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical"
        android:gravity="left">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/question_type_1_title"
            android:text="Question : "
            android:textSize="16sp"
            android:textColor="@color/hint_color"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:id="@+id/question_type_1_content"
            android:text="わたしis mean that"
            android:textSize="16sp"
            android:textColor="@color/colorPrimaryDark"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/question_type_1_answer_field"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/answer_type_1_title"
                android:text="Answer : "
                android:textSize="16sp"
                android:textColor="@color/hint_color"/>
            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">
                <android.support.v7.widget.AppCompatRadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tôi"
                    android:id="@+id/answer_type_1_1"
                    android:buttonTint="@color/background_color"
                    />
                <android.support.v7.widget.AppCompatRadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Chung Tôi"
                    android:id="@+id/answer_type_1_2"
                    android:buttonTint="@color/background_color"
                    />
                <android.support.v7.widget.AppCompatRadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Chúng ta"
                    android:id="@+id/answer_type_1_3"
                    android:buttonTint="@color/background_color"
                    />
                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ban"
                    android:id="@+id/answer_type_1_4"
                    android:buttonTint="@color/background_color"
                    />
            </RadioGroup>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>